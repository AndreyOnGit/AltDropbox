<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
      fx:controller="RenamingController">

    <HBox VBox.vgrow="ALWAYS">
        <Label fx:id="name" text="New name " HBox.hgrow="ALWAYS"/>
        <TextField fx:id="fieldName" editable="true" HBox.hgrow="ALWAYS"/>
    </HBox>

    <Button fx:id="btnRename" focusTraversable="false" text="Rename" HBox.hgrow="ALWAYS"
            onAction="#btnChangeName"/>

</VBox>
